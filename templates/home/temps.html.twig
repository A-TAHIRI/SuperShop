{% extends 'base.html.twig' %}

{% block title %}Meteo
{% endblock %}


{% block body %}
	<div class="weather_animated">

		<input type="hidden" name="client_ip" value="78.240.178.167">

		<div class="location">

			<span data-api="location">Blanquefort, Aquitaine, France</span>

		</div>

		<div class="main_left">

			<i data-api="current_icon" class="full_sun"></i>
			<span data-api="current_main_descr">Sunny</span>

		</div>

		<div class="main_right">

			<span data-api="current_wind_speed" class="wind">Wind: 9 kmph</span>
			<span data-api="current_precip" class="precip">Precip: 0 mm</span>
			<span data-api="current_pressure" class="pressure">Pressure: 1010 mb</span>
			<span data-api="current_temperature" class="temperature">32°c</span>

		</div>

		<div data-api="forecast_week" class="week">
			<div class="day">
				<span class="name">SAT</span>
				<i class="full_sun"></i>
				<span class="temperature">26 °c</span>
			</div>
			<div class="day">
				<span class="name">SUN</span>
				<i class="full_sun"></i>
				<span class="temperature">27 °c</span>
			</div>
			<div class="day">
				<span class="name">MON</span>
				<i class="full_sun"></i>
				<span class="temperature">27 °c</span>
			</div>
			<div class="day">
				<span class="name">TUE</span>
				<i class="full_sun"></i>
				<span class="temperature">26 °c</span>
			</div>
			<div class="day">
				<span class="name">WED</span>
				<i class="full_sun"></i>
				<span class="temperature">24 °c</span>
			</div>
		</div>

	</div>

{% endblock %}
